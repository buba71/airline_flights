{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

    <!-- Page Content -->
    <div class="container">
      <div class="card border-0 shadow my-5" id="home_page">

        <div class="card-body p-5">
            <div class="card-header">
                <h1 class="fw-light">Connexion</h1>
            </div>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label"></label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Email"/>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label"></label>
                    <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe"/>
                </div>

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"/> #}

                <button type="submit" class="btn btn-primary">Se connecter</button>
                <a href="{{ path('app_register') }}" class="m-3">s'inscrire</a>
            </form>

          
        </div>
      </div>

    </div>
       
    

{% endblock %}
