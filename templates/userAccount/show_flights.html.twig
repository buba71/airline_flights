{% block body %}

<!-- Page Content -->
<div class="container">
  <div class="card border-0 shadow my-5" id="home_page">

    <div class="card-body p-5">
      <h1 class="fw-light">Bienvenu {{ app.user.firstName }}, voici nos vols</h1>
      <table class="table table-striped mt-5 text-light">
        <thead>
            <tr>
                <th>Numéro de vol</th>
                <th>Ville de départ</th>
                <th>Ville d'arrivée</th>
                <th>Jour de départ</th>
                <th>Heure de départ</th>
